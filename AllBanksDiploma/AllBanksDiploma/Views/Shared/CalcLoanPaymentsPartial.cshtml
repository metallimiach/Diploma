<form class="form-horizontal" role="form" method="post" action="/Prodact/CalcLoanPayments">
    <div class="form-group">
        <label class="control-label col-sm-2" for="sum">Сумма</label>
        <div class="col-sm-10">
            <input class="form-control" name="sum" id="sum" value="1000000" pattern="^[0-9]+$" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="rate">Процентная ставка до</label>
        <div class="col-sm-10">
            <input class="form-control" name="rate" id="rate" type="number" min="0" max="100" value="60" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="term">Срок</label>
        <div class="col-sm-10">
            <select class="form-control" name="term" id="term">
                <option value="6" selected>6 мес.</option>
                <option value="12">1 год</option>
                <option value="24">2 года</option>
                <option value="36">3 года</option>
                <option value="60">5 лет</option>
                <option value="84">7 лет</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Расчитать платежи</button>
        </div>
    </div>
</form>
