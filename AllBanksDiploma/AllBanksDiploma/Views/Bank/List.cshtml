@using AllBanksDiploma.Models
@model IEnumerable<Bank>
@{
    ViewBag.Title = "Банки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="title" align="center">
    <h1><b>Информация о банках Беларуси</b></h1>
</div>
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr align="center">
                <th></th>
                <th>Наименование Банка</th>
                <th>Описание</th>
                <th>Официальный сайт</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Bank b in Model)
            {
                <tr>
                    <td>@b.ImageData</td>
                    <td>@b.BankName</td>
                    <td>@b.Description<a href="/Bank/Details/@b.BankId"> Подробнее...</a></td>
                    <td align="center"><a href="http://@b.WebPage">@b.WebPage</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>



